@model IEnumerable<Product>
<div class="right_col" role="main">
    <div class="">
            <div class="clearfix"></div>
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ürün Yönetimi</h2>
                        <a asp-controller="Product" asp-action="New" class="btn btn-success float-right" style="color:#fff">Yeni Ürün</a>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Ürün Adı</th>
                                        <th class="column-title">Ürün Fiyatı</th>
                                        <th class="column-title">Stok Miktarı</th>
                                        <th class="column-title">Sıra</th>
                                        <th class="column-title"></th>
                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (Product s in Model)
                                    {
                                        <tr class="even pointer">
                                            <td><a asp-controller="Product" asp-action="Edit" asp-route-id="@s.ID">@s.Name</a></td>
                                            <td>@s.Price TL</td>
                                            <td>@s.Stock</td>
                                            <td>@s.DisplayIndex</td>
                                            <td><a asp-controller="ProductPicture" asp-action="Index" asp-route-productid="@s.ID">Ürüne Ait Resimler</a></td>
                                            <td>
                                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@s.ID" class="btn btn-danger" style="color:#fff">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->